<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @article %>
      <%= form_with(model: @article, class: "shadow p-3 mb-3 bg-info rounded", local: true, data: { turbo: false }) do |f| %>
        <div class="form-group row mb-3">
          <%= f.label :title, class: "col-2 col-form-label text-light"%>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control shadow rouned", placeholder: "Title of article"%>
          </div>
        </div>

        <div class="form-group row mb-3">
          <%= f.label :description, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_area :description, rows: 10, class: "form-control shadow rouned", placeholder: "Description of article" %>
          </div>
        </div>

        <div class="form-group row justify-content-center mb-3">
          <%= f.submit class: "btn btn-outline-light btn-lg col-2"%>
        </div>

      <% end %>
    </div>
    <div class="row mb-3">
      <%= link_to '[Cancel and return to articles listing]', articles_path, class: "mx-auto col-3 text-info" %>
    </div>
  </div>
</div>