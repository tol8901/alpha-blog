<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @user %>
      <%= form_with(model: @user, class: "shadow p-3 mb-3 bg-info rounded", local: true, data: { turbo: false }) do |f| %>
        <div class="form-group row mb-3">
          <%= f.label :username, class: "col-2 col-form-label text-light"%>
          <div class="col-10">
            <%= f.text_field :username, class: "form-control shadow rouned", placeholder: "Enter a username"%>
          </div>
        </div>

        <div class="form-group row mb-3">
          <%= f.label :email, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email address" %>
          </div>
        </div>

        <div class="form-group row mb-3">
          <%= f.label :password, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Choose a password" %>
          </div>
        </div>

        <div class="form-group row justify-content-center mb-3">
          <%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: "btn btn-outline-light btn-lg col-2") %>
        </div>

      <% end %>
    </div>
    <div class="row mb-3">
      <%= link_to '[Cancel and return to articles listing]', articles_path, class: "mx-auto col-3 text-info" %>
    </div>
  </div>
</div>